<% layout('/layouts/boilerplate') -%>
<div class="mt-3"><h3>All listing</h3></div>
<!-- <form method="GET" action="/listings/new">
   <button>Create new listing</button> 
</form> -->

<style>
  .filter {
    margin-top: 2rem;
    text-align: center;
    margin-right: 2rem;
    opacity: 0.7;
  }

  #filters {
    display: flex;
    flex-wrap: wrap;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter.active-filter {
    opacity: 1;
    border-bottom: 3px solid #000;
  }
</style>
<div id="filters">
  <div
    class="filter <%= category === 'room' ? 'active-filter' : '' %>"
    data-category="room"
  >
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </div>
  <div
    class="filter <%= category === 'city' ? 'active-filter' : '' %>"
    data-category="city"
  >
    <div><i class="fa-solid fa-landmark"></i></div>
    <p>Iconic cities</p>
  </div>
  <div
    class="filter <%= category === 'mountain' ? 'active-filter' : '' %>"
    data-category="mountain"
  >
    <div><i class="fa-solid fa-mountain-sun"></i></div>
    <p>Mountains</p>
  </div>
  <div
    class="filter <%= category === 'castle' ? 'active-filter' : '' %>"
    data-category="castle"
  >
    <div><i class="fa-solid fa-chess-rook"></i></div>
    <p>Castles</p>
  </div>
  <div
    class="filter <%= category === 'pool' ? 'active-filter' : '' %>"
    data-category="pool"
  >
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Amazing pools</p>
  </div>
  <div
    class="filter <%= category === 'camping' ? 'active-filter' : '' %>"
    data-category="camping"
  >
    <div><i class="fa-solid fa-tents"></i></div>
    <p>Camping</p>
  </div>
  <div
    class="filter <%= category === 'beach' ? 'active-filter' : '' %>"
    data-category="beach"
  >
    <div><i class="fa-solid fa-umbrella-beach"></i></div>
    <p>Beach</p>
  </div>
  <div
    class="filter <%= category === 'snow' ? 'active-filter' : '' %>"
    data-category="snow"
  >
    <div><i class="fa-solid fa-tree"></i></div>
    <p>Snow</p>
  </div>
  <% if (category) { %>
  <div class="filter">
    <a href="/listings" style="text-decoration: none; color: inherit">
      <div><i class="fa-solid fa-xmark"></i></div>
      <p>Clear</p>
    </a>
  </div>
  <% } %>
</div>

<div
  id="listing-container"
  class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3"
>
  <% if (allListings.length === 0) { %>
  <div
    class="d-flex justify-content-center align-items-center w-100 mt-5"
    style="height: 300px"
  >
    <div class="text-center">
      <h4>No listings found.</h4>
      <p>Try adjusting your search or category filter.</p>
    </div>
  </div>
  <% } else { %> <% for(let listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br />
          &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
        </p>
      </div>
    </div>
  </a>
  <% } %> <% } %>
</div>
