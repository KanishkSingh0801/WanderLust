<% layout('/layouts/boilerplate') -%>
<div class="row justify-content-center mt-3">
  <div class="col-lg-8 col-md-10 col-sm-12">
    <h3><%= listing.title %></h3>

    <div class="card listing-card mt-3">
      <img
        src="<%= listing.image.url %>"
        alt="listing_image"
        class="img-fluid rounded"
        style="max-height: 500px; object-fit: contain;"
      />
      <div class="card-body">
        <p class="card-text mt-3">
          <b>Owned by: - <i><%= listing.owner.username %></i><br /></b>
          <b>About : </b><%= listing.description %><br />
          <b>Price : </b>&#8377;<%= listing.price.toLocaleString("en-IN") %><br />
          <b>Location : </b><%= listing.location %> <br />
          <b>Country : </b><%= listing.country %> <br />
          <b>Category : </b><%= listing.category %> <br />
        </p>
      </div>
    </div>

    <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
    <div class="d-flex flex-wrap gap-2 mt-3">
      <a
        href="/listings/<%= listing._id %>/edit"
        class="btn btn-dark"
      >Edit</a>
      <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
        <button class="btn btn-dark">Delete</button>
      </form>
    </div>
    <% } %>

    <hr class="mt-4" />

    <% if(currUser) { %>
    <h4>Leave a review</h4>
    <form
      action="/listings/<%= listing.id %>/reviews"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3 mt-3">
        <label class="form-label" for="rating">Rating</label>
        <fieldset class="starability-basic">
          <!-- stars here -->
        </fieldset>
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea
          name="review[comment]"
          id="comment"
          class="form-control"
          rows="5"
          required
        ></textarea>
        <div class="invalid-feedback">Please add some comments for review</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
    <hr />
    <% } %>

    <p><b>All reviews</b></p>
    <div class="row">
      <% for(review of listing.reviews) { %>
      <div class="card col-lg-5 col-md-6 col-sm-12 ms-3 mb-3">
        <div class="card-body mt-3">
          <h5 class="card-title">@<%= review.author.username %></h5>
          <p class="card-text"><%= review.comment %></p>
          <p class="card-text"><%= review.rating %> stars</p>
          <p class="starability-result" data-rating=<%=review.rating%>>
            Rated: <%= review.rating %> stars
          </p>
        </div>
        <form
          class="mb-3 mt-3"
          method="POST"
          action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
        >
          <button class="btn btn-sm btn-dark">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>
</div>
