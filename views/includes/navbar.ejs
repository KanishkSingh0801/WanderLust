<style>
  .btn-search {
    background-color: #fe424d;
    color: white;
    display: flex;
    border-radius: 25px;
  }

  .search-input {
    border-radius: 25px;
    padding: 0.5rem 2rem 0.5rem 2rem;
  }

  .btn-search:hover {
    background-color: #fe424d;
    color: white;
  }

  .btn-search i {
    padding: 4px 2px;
    margin-right: 0.5rem;
  }
</style>

<nav class="navbar navbar-expand-lg bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings">
      <i class="fa-regular fa-compass"></i> Wanderlust
    </a>

    <!-- Hamburger Toggle Button -->
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible Content -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <!-- Search Bar (centered on larger screens, stacked below Explore on mobile) -->
      <div class="navbar-nav ms-auto mt-2 mt-lg-0">
        <form class="d-flex" role="search" action="/listings" method="GET">
          <input
            class="form-control me-2 search-input"
            type="search"
            name="search"
            value="<%= typeof search !== 'undefined' ? search : '' %>"
            placeholder="Search"
          />
          <button class="btn btn-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i> Search
          </button>
        </form>
      </div>

      <!-- Right-aligned Auth + Host links -->
      <div class="navbar-nav ms-auto mt-2 mt-lg-0">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
        <% if (!currUser) { %>
          <a class="nav-link" href="/signup"><b>Sign up</b></a>
          <a class="nav-link" href="/login"><b>Login</b></a>
        <% } %>
        <% if (currUser) { %>
          <a class="nav-link" href="/logout">Logout</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
